{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": false,
        "incremental": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,

        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitAny": true,

        // Because vega-lite has some strict typing issues:
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*"]

}